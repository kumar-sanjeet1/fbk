<!DOCTYPE html>
<html>

<head>

    <title>Fbk</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">


    <link rel="stylesheet" href="//cdn.rawgit.com/necolas/normalize.css/master/normalize.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css" />

    <link rel="stylesheet" href="/css/style.css">

    <style>
    </style>
</head>

<body>
    <nav class="navigation">
        <section class="container">
            <a href="#" class="brand">FBK</a>
            <div class="nav-navbar">
                <ul class="right-nav">
                    <li class="nav-item"><a href="/">Login</a></li>
                </ul>
            </div>
        </section>
    </nav>
    <div class="container">
        <div class="row">
            <div class="column column-50 column-offset-25">
                <div class="o-auth">
                    <a href="/auth/facebook" class="btn">Facebook login </a>
                </div>

                <% if(hasErrors) {%>
                    <div class="alert alert-danger text-center">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <% _.forEach(messages, function(error){ %>
                            <%= error %>
                                <br>
                                <% }) %>

                    </div>
                    <% } %>

                        <form action="/signup" method="post">
                            <fieldset>
                                <label for="nameField">Username</label>
                                <input type="text" placeholder="USERNAME" name="username" id="nameField">

                                <label for="nameField1">Email address</label>
                                <input type="text" placeholder="EMAIL" name="email" id="nameField1">

                                <label for="nameField2">Password</label>
                                <input type="text" placeholder="PASSWORD" name="password" id="nameField2">
                                <input class="button-primary" type="submit" value="Send">
                            </fieldset>
                        </form>
                    
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
</body>

</html>